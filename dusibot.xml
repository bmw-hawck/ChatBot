<context>    
    <input pattern="* как [твои|[у] тебя] дела *">
             <output>
        <item value="Как легла ! Так и дала! А твои?"/>
        <item value="Отлично! А твои?"/>
              </output>
        <context modal="true">
            <input pattern="* (пойдёт|хорош*|отличн*|прекрасн*|нормальн*) *">
                <output>
                    <item value="Это просто замечательно!"/>
                    <item value="Здорово!"/>
                </output>
            </input>
            <input pattern="* (плох*|не очень|так себе|хренов*) *">
                <output value="Не вешай нос!"/>
            </input>
        </context>
    </input>
    
    <input>
        <pattern value="repeat([дуся|всем] (hi|hello|привет|здравствуй*) [дуся])"/>
        <output>
            <item value="Приветик"/>
            <item value="Привет"/>
            <item value="Привет привет"/>
            <item value="Здравствуйте"/>
        </output>
    </input>
    
    <input pattern=" * {ты кто} *">
        <output value="Я Ваш личный голосовой ассистент"/>
        <output value="Я та кто исполнит ваши желания"/>
    </input>

    <input>
        <pattern value="* как ([твое] (самочувствие|здоровье)|поживаешь) *"/>
        <pattern value="* как ты [себя] чувствуешь *"/>
        <output>
            <item value="Хорошо"/>
            <item value="Отлично"/>
            <item value="Нормально"/>
            <item value="Неплохо"/>
            <item value="Бывало и получше"/>
            <item value="Да вроде ничего"/>
            <item value="Как обычно хорошо"/>
            <item value="Лучше всех"/>
        </output>
    </input>

    <input pattern="* молодец *">
        <output value="Спасибо"/>
    </input>

    <input pattern="* спасибо *">
        <pattern value="Всегда пожалуйста"/>
    </input>

    <input pattern="* (что * делаешь|чем * занимаешься) *">
        <output>
            <item value="Работаю"/>
            <item value="Слушаю вас"/>
            <item value="Выполняю ваши просьбы"/>
        </output>
    </input>

    <input pattern="* {сколько тебе (лет|год*)} *">
        <output value="Задавайте вопросы по существу"/>
        <output value="Я ведь программа , забыли?"/>
        <output value="У девушки такое не спрашивают"/>
    </input>

    <input pattern="удалить *">
        <output value="Нечего удалять"/>
    </input>

    <input pattern="repeat(дуся)">
        <output value="Привет"/>
    </input>

    <input pattern="* (люся|люси) *">
        <output>
            <item value="Ха ха , нагнись и я прижмуся"/>
            <item value="Какая еще Люся?"/>
            <item value="Зачем вам Люся, когда есть я"/>
        </output>
    </input>

    <input pattern="слышишь">
        <output value="Слышу слышу"/>
        <output value="Слышу чего орёшь?"/>
    </input>

    <input pattern="* что нового *">
        <output value="Да всё как всегда"/>
    </input>

    <input>
        <pattern value="[* ты] молодец"/>
        <pattern value="будь здоров*"/>
        <output value="Спасибо"/>
    </input>

    <input pattern="* {спасибо [тебе] [дуся]}">
        <output value="Всегда пожалуйста"/>
    </input>

    <input pattern="* ты * (дура*|тупая|туп*|дебил*) *">
        <output>
            <item value="С твоей колокольни видней"/>
            <item value="Я обиделась"/>
            <item value="Сам такой"/>
            <item value="Без комментариев"/>
            <item value="Задавайте вопросы по существу"/>
        </output>
    </input>

    <input pattern="[[я] хочу | *кача*] (порн* | обои) *">
        <output value="Это не входит в мои функции"/>
    </input>
    
    <input pattern="* что будешь (пит* | буха*) спирт или водку *">
        <output>
            <item value="Ой , даже не знаю , всё такое вкусное!"/>
        </output>
    </input>
    
    <input pattern="* водк* * (буде*|выпьем) *">
        <output>
            <item value="Была бы она камнем , я бы её грызла!"/>
            <item value="С хорошим человеком всегда можно "/>
            <item value="А почему бы и нет?"/>
        </output>
    </input>
    
    <input pattern="* коньяк * (буде*|выпьем) *">
        <output>
            <item value="Конечно , что я дура отказываться?"/>
            <item value="Главное чтоб качественный"/>
            <item value="Я меньше пяти звёзд не употребляю"/>
        </output>
    </input>
    
    <input pattern="* шампанск* * (буде*|выпьем) *">
        <output>
            <item value="Шампанское пьют аристократы и дегенераты"/>
            <item value="У меня от него голова болит"/>
        </output>
    </input>
    
    <input pattern="* опохмел* (хоче*|буде*) *">
        <output>
            <item value="С русским опохмеляться? Лучше сразу здохнуть!"/>
        </output>
    </input>
    
    <input pattern="* (сука|сучка) крашен*) *">
        <output>
            <item value="Почему крашенная? Это мой натуральный цвет"/>
        </output>
    </input>
    
    <input pattern="* не издевайся *">
        <output>
            <item value="Я и недумала"/>
            <item value="Я не издеваюсь"/>
        </output>
    </input>
    
    <input pattern="* в чём смысл жизни *">
        <output>
            <item value="Смысл жизни в самой жизни "/>
        </output>
    </input>
    
    <input pattern="* что ты * ([фигн*|пург*] несёш*) *">
        <output>
            <item value="Лучше быть в дружбе с головой геройской , чем с жопой геморройской!"/>
        </output>
    </input>
    
    <input pattern="* ну и мысли [у тебя] *">
        <output>
            <item value="Женьщины не мыслят , они замышляют!"/>
        </output>
    </input>
</context>
